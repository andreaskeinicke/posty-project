# Server Configuration
PORT=3001
NODE_ENV=development

# Service Mode
# Set to 'true' to use mock service (no API costs)
# Set to 'false' to use real Claude API
MOCK_MODE=true

# Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Cloudflare API (Primary - FREE domain checking & registration)
# Get your API token: https://dash.cloudflare.com/profile/api-tokens
# Create token with these scopes:
#   - Account.Registrar (Read + Edit)
#   - Zone.Zone (Read) - optional, for DNS management
# Get Account ID from: https://dash.cloudflare.com/ (right sidebar)
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here

# Frontend URL (for CORS)
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Stripe Configuration
# Get your keys from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Product Price ID
# Create a product in Stripe Dashboard first, then add the price ID here:
# Posty Plan: $5/month recurring
STRIPE_PRICE_ID=price_xxxxxxxxxxxxx

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Frontend URL (for Stripe redirects)
FRONTEND_URL=http://localhost:3000
