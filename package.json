{
  "name": "posty",
  "version": "1.0.0",
  "description": "AI-powered custom email domain finder",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon backend/server.js",
    "client": "cd frontend && PORT=3000 npm start",
    "build": "cd frontend && npm run build",
    "install-all": "npm install && cd frontend && npm install"
  },
  "keywords": [
    "email",
    "domain",
    "ai",
    "chatbot"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@supabase/supabase-js": "^2.83.0",
    "axios": "^1.6.2",
    "cloudflare": "^5.2.0",
    "cors": "^2.8.5",
    "dns-lookup": "^0.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "node-cache": "^5.1.2",
    "stripe": "^20.0.0",
    "whois-json": "^2.0.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
